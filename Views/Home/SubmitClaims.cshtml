@{
    ViewData["Title"] = "Submit Claims";
}
@model ST10384311PROG6212POE.Models.Entities.Claims

<!Doctype html>
<html>
    <head>
        <link rel="stylesheet" href="~/css/submitclaims.css"/>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.1.0/jquery.validate.unobtrusive.min.js"></script>
    </head>

<body>
    <div class="form-container">
        <h2>Submit Your Claim</h2>

        <!-- A form that allows the Lecturer to Submit Claims -->
        <form asp-controller="Home" asp-action="SubmitClaims" method="post" enctype="multipart/form-data" novalidate>

            <!-- Validation summary to display any server-side validation errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--Lecturer Name -->
            <div class="form-group">
                <label for="lecturername">Name</label>
                <input type="text" id="lecturername" name="LecturerName" class="form-control" required />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>

            <!--Lecturer Email -->
            <div class="form-group">
                <label for="lectureremail">Email</label>
                <input type="email" id="lectureremail" name="LecturerEmail" class="form-control" required />
                <span asp-validation-for="LecturerEmail" class="text-danger"></span>
                </div>

            <!-- Claim Period -->
            <div class="form-group">
                <label for="claimPeriod">Claim Period</label>
                <input type="month" id="claimPeriod" name="ClaimPeriod" class="form-control" required />
                <span asp-validation-for="ClaimPeriod" class="text-danger"></span>
            </div>

            <!-- Total Hours Worked -->
            <div class="form-group">
                <label for="totalHours">Total Hours Worked</label>
                <input type="number" id="totalHours" name="TotalHours" placeholder="Enter total hours" class="form-control" min="1" required />
                <span asp-validation-for="TotalHours" class="text-danger"></span>
            </div>

            <!-- Hourly Rate -->
            <div class="form-group">
                <label for="hourlyRate">Hourly Rate</label>
                <input type="number" id="hourlyRate" name="HourlyRate" placeholder="Enter hourly rate" class="form-control" min="1" required />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <!-- Supporting Documents -->
            <div class="form-group">
                <label for="supportingDocs">Upload Supporting Documents</label>
                <input type="file" id="supportingDocs" name="SupportingDocs" class="form-control" />
                <span asp-validation-for="SupportingDocsUrl" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-submit">Submit Claim</button>
        </form>
    </div>

</body>
</html>
