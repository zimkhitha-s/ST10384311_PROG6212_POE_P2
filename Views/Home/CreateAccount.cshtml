@{
    ViewData["Title"] = "Create Account";
}
<!Doctype html>
<html>
<head>
    <link rel="stylesheet" href="~/css/createaccount.css" />
    <script src="~/js/createaccount.js"></script>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h2>Create an Account</h2>
            <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
                <!-- Common Employee Fields -->
                <div>
                    <label for="employeeName">First Name:</label>
                    <input type="text" id="employeeName" name="employeeName" required />
                </div>
                <div>
                    <label for="employeeSurname">Last Name:</label>
                    <input type="text" id="employeeSurname" name="employeeSurname" required />
                </div>
                <div>
                    <label for="employeeEmail">Email:</label>
                    <input type="email" id="employeeEmail" name="employeeEmail" required />
                </div>
                <div>
                    <label for="employeeRole">Select Your Role:</label>
                    <select id="employeeRole" name="employeeRole" onchange="updateRoleSpecificFields()" required>
                        <option value="">-- Select a Role --</option>
                        <option value="lecturer">Lecturer</option>
                    </select>
                </div>

                <!-- Role-Specific Fields -->
                <div id="role-specific-fields"></div>

                <!-- Submit Button -->
                <div class="button-container">
                    <button type="submit" class="submit-btn">Create Account</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
