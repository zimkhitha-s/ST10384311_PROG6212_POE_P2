@{
    ViewData["Title"] = "Process Claims";
}

@model IEnumerable<ST10384311PROG6212POE.Models.Entities.Claims>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/processclaims.css" />
</head>
<body>
    <div class="claims-container">
        <h2>Pending Claims for Approval</h2>

        <!-- A table displaying the submitted claims -->
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Lecturer Email</th>
                    <th>Claim Period</th>
                    <th>Total Hours</th>
                    <th>Total Amount</th>
                    <th>Documents</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td> <!-- Added LecturerName -->
                            <td>@claim.LecturerEmail</td> <!-- Added LecturerEmail -->
                            <td>@claim.ClaimPeriod</td>
                            <td>@claim.TotalHours</td>
                            <td>@claim.TotalAmount</td>
                            <td><a href="@claim.SupportingDocsUrl">View Document</a></td>
                            <td><span class="status @claim.Status.ToLower()">@claim.Status</span></td>
                            <td>
                                <button class="btn-verify">Verify</button>
                                <button class="btn-approve">Approve</button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">No claims available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
