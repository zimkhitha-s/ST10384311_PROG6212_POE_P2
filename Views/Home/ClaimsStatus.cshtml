@{
    ViewData["Title"] = "Claims Status";
}

@model IEnumerable<ST10384311PROG6212POE.Models.Entities.Claims>
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/claimsstatus.css" />
</head>
<body>
    <div class="claims-status-container">
        <h2>My Claim Status</h2>

        <!-- Table displaying the lecturer's submitted claims -->
        <table class="claims-table">
            <thead>
                <tr>
                    <th>Claim Period</th>
                    <th>Total Hours</th>
                    <th>Total Amount</th>
                    <th>Documents</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimPeriod</td>
                            <td>@claim.TotalHours</td>
                            <td>@claim.TotalAmount</td>
                            <td><a href="@claim.SupportingDocsUrl">View Document</a></td>
                            <td><span class="status @claim.Status.ToLower()">@claim.Status</span></td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No claims available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
