@{
    ViewData["Title"] = "Claims Status";
}
<!Doctype html>
<html>
    <head>
        <link rel="stylesheet" href="~/css/claimsstatus.css" />
    </head>

    <body>
        <!-- Tracking Claims Status -->
        <div class="claims-status-container">
            <h2>My Claim Status</h2>
            <!--Table that displays the Claims and allows the Lecturer to Track the Status-->
            <table class="claims-table">
                <!--Table Headers-->
                <thead>
                    <tr>
                        <th>Claim Period</th>
                        <th>Total Hours</th>
                        <th>Total Amount</th>
                        <th>Documents</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <!--Table Information-->
                <tbody>
                    <!--Sample Data 1-->
                    <tr>
                        <td>August 2024</td>
                        <td>30</td>
                        <td>R900</td>
                        <td><a href="#">View Document</a></td>
                        <td><span class="status pending">Pending</span></td>
                    </tr>

                <!--Sample Data 2-->
                    <tr>
                        <td>July 2024</td>
                        <td>40</td>
                        <td>R1200</td>
                        <td><a href="#">View Document</a></td>
                        <td><span class="status approved">Approved</span></td>
                    </tr>

                <!--Sample Data 3-->
                    <tr>
                        <td>June 2024</td>
                        <td>25</td>
                        <td>R750</td>
                        <td><a href="#">View Document</a></td>
                        <td><span class="status verified">Verified</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </body>
</html>
