@{
    ViewData["Title"] = "Home";
}
<!Doctype html>
<html>
<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
    <div class="container">
        <!-- Left Section: Welcoming Body -->
        <div class="welcoming-body">
            <div class="heading">
                <h1>Welcome to the</h1>
            </div>

            <div class="subheading">
                <h1>Contract Monthly Claims System</h1>
            </div>

            <div class="paragraph">
                <p>
                    This platform is designed specifically for Independent Contractor (IC) lecturers to efficiently submit
                    their monthly claims. Here, you can easily track your work hours, calculate your claims based on hourly
                    rates, and submit the necessary documentation for approval. Once your claims are submitted, they will
                    be reviewed by the Programme Coordinator and Academic Manager. To get started, simply click the button
                    below to access the claims submission page.
                </p>
            </div>

            <div class="button">
                <a asp-controller="Home" asp-action="SubmitClaims" class="hero-btn">Submit Claims</a>
            </div>
        </div>

        <!-- Right Section: Login Form -->
        <div class="login-form">
            <h2>Login</h2>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div>
                    <label for="role">Select Your Role:</label>
                    <select id="role" name="role" required>
                        <option value="">-- Select a Role --</option>
                        <option value="lecturer">Lecturer</option>
                        <option value="administrator">Administrator</option>
                        <option value="hr">HR</option>
                    </select>
                </div>
                <div>
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required />
                </div>
                <div>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <div class="button-container">
                    <button type="submit" class="login-btn">Login</button>
                </div>
            </form>
            <div class="create-account">
                <p>Don't have an account? <a href="/Account/Register" class="create-account-link">Create an Account</a>.</p>
            </div>
        </div>
    </div>
</body>
</html>
